@model TS.Scrabble.BL.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p id="warning" class="text-danger">@ViewBag.Message</p>

@using (Html.BeginForm("Create","User",FormMethod.Post, new { onsubmit = "return password()"}))
{
@Html.AntiForgeryToken()

<div class="main-Create">
    <p class="sign" align="center">Create Account</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "Create-Input", @placeholder = "First Name" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "Create-Input", @placeholder = "Last Name" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "Create-Input", @placeholder = "Email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "Create-Input", @placeholder = "Username" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password, new { @class = "Create-Input", @placeholder = " Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="password" placeholder="Re-Enter Password" class="Create-Input" id="verifyPass" />
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" runat="server" id="create" value="Create" class="create-submit" onclick="password();" />
        </div>
    </div>
</div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script language="javascript" type="text/javascript">

    function password() {
        var pass = document.getElementById("Password");
        var verifyPass = document.getElementById("verifyPass");
        if (pass.value != verifyPass.value) {
            $("#warning").text("Passwords do not match.");
           return false;
        } else {
            return true;
        }
    }

</script>
