@{
    ViewBag.Title = "Home Page";
}

    <div class="Sidebar-Left">
    </div>
    <div class="Sidebar-Right">
    </div>
    <div id="ScrabbleImage">
        <div class="header rounded-top">
            <h3>
                Welcome To Scrabble!
            </h3>
        </div>
        <img id="ScrabbleLogo" src="~/Images/ScrabbleLogo.png.png" />


        <div class="form-row ml-2 mt-2">
            <div class="control-label col-md-2">
                <h4>Login Or Create An Account To Play:</h4>
            </div>
        </div>

        <div class="form-row ml-2 mt-2">
            <div class="control-label col-md-2">
                <p>Username:</p>
            </div>
            <div class="control-label col-md-3">
                <input type="text" id="txtUsername" name="Uname" />
            </div>
        </div>

        <div class="form-row ml-2 mt-2">
            <div class="control-label col-md-2">
                <p>Password:</p>
            </div>
            <div class="control-label col-md-3">
                <input type="text" id="txtPassword" name="Pass" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary btn-md ml-3" />
            </div>
        </div>
    </div>
